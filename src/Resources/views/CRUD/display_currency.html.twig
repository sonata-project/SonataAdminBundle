{%- apply spaceless %}
    {# NEXT_MAJOR: Remove this BC-layer #}
    {% if field_description is defined %}
        {% set currency = currency|default(field_description.option('currency')) %}
    {% endif %}

    {%- if value is null -%}
        &nbsp;
    {%- else -%}
        {{ currency|default(null) }} {{ value }}
    {%- endif -%}
{% endapply -%}
