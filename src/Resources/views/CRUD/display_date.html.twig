{%- apply spaceless %}
    {%- if value is empty -%}
        &nbsp;
    {%- else -%}
        {% set options = field_description.options %}
        <time datetime="{{ value|date('Y-m-d', 'UTC') }}" title="{{ value|date('Y-m-d', 'UTC') }}">
            {{ value|date(options.format|default('F j, Y'), options.timezone|default(null)) }}
        </time>
    {%- endif -%}
{% endapply -%}
