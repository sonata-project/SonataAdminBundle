{%- apply spaceless %}
    {%- if value is empty -%}
        &nbsp;
    {%- else -%}
        <time datetime="{{ value|date('Y-m-d', 'UTC') }}" title="{{ value|date('Y-m-d', 'UTC') }}">
            {{ value|date(field_description.option('format', 'F j, Y'), field_description.option('timezone')) }}
        </time>
    {%- endif -%}
{% endapply -%}
