{%- apply spaceless %}
    {% set value = value_format|default('%s')|format(value)|trans({}, translation_domain|default('messages')) %}

    {% if safe|default(false) %}
        {{ value|raw }}
    {% else %}
        {{ value }}
    {% endif %}
{% endapply -%}
