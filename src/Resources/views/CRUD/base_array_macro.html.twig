{% macro render_array(value, inline) %}
    {% from _self import render_array %}
    {% for key, val in value %}
        {% if val is iterable %}
            [{{ key }} => {{ render_array(val, inline) }}]
        {%  else %}
            [{{ key }} => {{ val }}]
        {%  endif %}

        {% if not loop.last and not inline %}
            <br>
        {% endif %}
    {% endfor %}
{% endmacro %}
