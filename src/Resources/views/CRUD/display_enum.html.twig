{%- apply spaceless %}
    {% set value = use_value|default(false) ? value.value : value.name %}

    {% if translation_domain|default(null) is null %}
        {% set value = value %}
    {% else %}
        {% set value = value|trans({}, translation_domain) %}
    {% endif %}

    {{ value }}
{% endapply -%}
