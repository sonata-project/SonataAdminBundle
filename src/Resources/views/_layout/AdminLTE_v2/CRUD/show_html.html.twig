{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field %}
    {%- if value is empty -%}
        &nbsp;
    {% else %}
        {%- if field_description.option('truncate') -%}
            {% set truncate = field_description.option('truncate') %}
            {% set length = truncate.length|default(30) %}
            {% set cut = truncate.cut is defined ? truncate.cut : true %}
            {% set ellipsis = truncate.ellipsis is defined ? truncate.ellipsis : '...' %}
            {{ value|striptags|u.truncate(length, ellipsis, cut)|raw }}
        {%- else -%}
            {%- if field_description.option('strip', false) -%}
                {% set value = value|striptags %}
            {%- endif -%}
            {{ value|raw }}
        {% endif %}
    {% endif %}
{% endblock %}
