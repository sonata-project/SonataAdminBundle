includes:
    - phpstan-baseline.neon

parameters:
    level: 5
    paths:
        - src
    excludes_analyse:
        # temporarily ignore template files
        - src/Resources/**.tpl.php
    scanFiles:
        # NEXT_MAJOR: Remove those files
        - .phpstan/stubs/MetadataInterface.file
        - .phpstan/stubs/Exporter.file
        - .phpstan/stubs/TextExtension.file
