<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata_admin.model_manager.doctrine.class">Sonata\AdminBundle\ModelManager\Doctrine\DoctrineModelManager</parameter>
        <parameter key="sonata_admin.model_manager.doctrine.form_builder.class">Sonata\AdminBundle\ModelManager\Doctrine\Builder\DoctrineFormBuilder</parameter>
        <parameter key="sonata_admin.model_manager.doctrine.list_builder.class">Sonata\AdminBundle\ModelManager\Doctrine\Builder\DoctrineListBuilder</parameter>
        <parameter key="sonata.admin.model_manager.doctrine.data_grid_builder.class">Sonata\AdminBundle\ModelManager\Doctrine\Builder\DoctrineDataGridBuilder</parameter>
    </parameters>

    <services>
        <!-- Manager -->
        <service id="sonata_admin.model_manager.doctrine" class="%sonata_admin.model_manager.doctrine.class%">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>

        <!-- Form Builder -->
        <service id="sonata_admin.model_manager.doctrine.form_builder" class="%sonata_admin.model_manager.doctrine.form_builder.class%">
            <argument type="service" id="form.field_factory" />
            <argument type="service" id="form.context" />
            <argument type="service" id="validator" />
        </service>

        <!-- List Builder -->
        <service id="sonata_admin.model_manager.doctrine.list_builder" class="%sonata_admin.model_manager.doctrine.list_builder.class%">
        </service>

        <!-- DataGrid Builder -->
        <service id="sonata_admin.model_manager.doctrine.data_grid_builder" class="%sonata.admin.model_manager.doctrine.data_grid_builder.class%">
        </service>
    </services>

</container>
