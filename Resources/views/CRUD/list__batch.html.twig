{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    <div class="checkbox">
        <label for="list_select_{{ admin.id(object) }}">
            <input type="checkbox" name="idx[]" value="{{ admin.id(object) }}" id="list_select_{{ admin.id(object) }}">
            <span class="control-indicator"></span>
            <span class="sr-only">
                {{ 'label_list_select_row'|trans({}, 'SonataAdminBundle') }}
            </span>
        </label>
    </div>
{% endblock %}
